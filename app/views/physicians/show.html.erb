<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @physician.name %>
</p>

<h4>Availabilities</h4>

<% 72.times do |i| %>
  <% availability = @physician.availabilities.find { |a| a.number == i + 1} %>

  <div>
    <label>
      <%= check_box_tag nil, nil, _checked = !!availability %>
      <%= i + 1 %>
    </label>
  </div>
<% end %>

<%= link_to 'Edit', edit_physician_path(@physician) %> |
<%= link_to 'Back', physicians_path %>
